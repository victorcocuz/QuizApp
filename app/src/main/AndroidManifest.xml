<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MultipleChoiceActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_multiple"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".OneOptionActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_one"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".WrittenAnswerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_written"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FinishActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_finish"
            android:theme="@style/AppTheme" />
    </application>

</manifest>